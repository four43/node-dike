{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "importHelpers": true,
    "lib":["es6", "scripthost", "dom"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "deploy/**/*.ts",
    "scripts/**/*.ts"
  ]
}